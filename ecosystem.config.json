{
  "apps": [{
    "name": "tmvbusinesssolutions",
    "script": "start.js",
    "cwd": "/path/to/tmvbusinesssolutions",
    "instances": 1,
    "exec_mode": "cluster",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "error_file": "./logs/err.log",
    "out_file": "./logs/out.log",
    "log_file": "./logs/combined.log",
    "time": true,
    "log_type": "json",
    "max_restarts": 10,
    "min_uptime": "10s",
    "max_memory_restart": "1G",
    "node_args": "--max-old-space-size=1024",
    "watch": false,
    "ignore_watch": ["node_modules", "logs", "*.log"],
    "merge_logs": true,
    "kill_timeout": 5000
  }]
}