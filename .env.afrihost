# Afrihost Production Environment Variables
# Copy this to .env and fill in YOUR values before deploying

# Server Configuration
NODE_ENV=production
PORT=3000
SERVER_URL=https://tmvbusinesssolutions.co.za

# Database Configuration - Afrihost MySQL
DB_HOST=tmvbusinesssolutions.co.za
DB_PORT=3306
DB_USER=tmvbusw4e7k0_tmvbusinesssolutions
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_NAME=tmvbusw4e7k0_tmvbusinesssolutions
DB_DIALECT=mysql
DB_POOL_MIN=2
DB_POOL_MAX=10

# Client Configuration
CLIENT_URL=https://tmvbusinesssolutions.co.za

# Email Configuration - Afrihost SMTP
EMAIL_HOST=mail.afrihost.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=YOUR_EMAIL@tmvbusinesssolutions.co.za
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD_HERE
EMAIL_FROM=noreply@tmvbusinesssolutions.co.za

# Payment Gateway - Yoco (LIVE KEYS)
YOCO_PUBLIC_KEY=pk_live_your_public_key_here
YOCO_SECRET_KEY=sk_live_your_secret_key_here

# JWT Secret
JWT_SECRET=YOUR_LONG_RANDOM_JWT_SECRET_HERE

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Security
CORS_ORIGINS=https://tmvbusinesssolutions.co.za
HELMET_ENABLED=true
